root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


[*.{js,json}]
indent_size = 2

[*.{tf,tftfvars}]
indent_size = 2
indent_style = space

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[{Makefile,**.mk}]
indent_style = tab
[*.py]
indent_size = 4
